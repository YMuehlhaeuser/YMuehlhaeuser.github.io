---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/photos', label: 'Photos' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
];

const { pathname } = Astro.url;
---

<header>
  <nav>
    <a href="/" class="site-title">My Site</a>
    <ul>
      {navLinks.map(link => (
        <li>
          <a href={link.href} class={pathname === link.href || (link.href !== '/' && pathname.startsWith(link.href)) ? 'active' : ''}>
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--border);
    padding: 0 1.5rem;
  }
  nav {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 56px;
  }
  .site-title {
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    color: var(--text);
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem;
  }
  a {
    text-decoration: none;
    color: var(--text-muted);
    font-size: 0.95rem;
    transition: color 0.15s;
  }
  a:hover, a.active {
    color: var(--accent);
  }
</style>
