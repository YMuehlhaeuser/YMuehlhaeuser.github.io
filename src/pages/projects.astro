---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    name: 'Project One',
    description: 'A brief description of what this project does and the problems it solves.',
    url: 'https://github.com/YOUR_USERNAME/project-one',
    tags: ['TypeScript', 'Node.js'],
  },
  {
    name: 'Project Two',
    description: 'Another interesting project that demonstrates something cool.',
    url: 'https://github.com/YOUR_USERNAME/project-two',
    tags: ['Python', 'Machine Learning'],
  },
  {
    name: 'Project Three',
    description: 'Open source tooling that helps developers do X more efficiently.',
    url: 'https://github.com/YOUR_USERNAME/project-three',
    tags: ['Rust', 'CLI'],
  },
];
---

<BaseLayout title="Projects" description="Things I've built and shipped">
  <h1>Projects</h1>
  <p class="subtitle">A selection of things I've worked on.</p>

  <ul class="project-grid">
    {projects.map(project => (
      <li class="project-card">
        <a href={project.url} target="_blank" rel="noopener" class="project-link">
          <h2>{project.name}</h2>
          <p>{project.description}</p>
          <ul class="tags">
            {project.tags.map(tag => <li class="tag">{tag}</li>)}
          </ul>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  h1 {
    margin-top: 0;
  }

  .subtitle {
    color: var(--text-muted);
    margin-top: -0.5rem;
    margin-bottom: 2rem;
  }

  .project-grid {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .project-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: border-color 0.15s;
  }

  .project-card:hover {
    border-color: var(--accent);
  }

  .project-link {
    display: block;
    padding: 1.25rem;
    text-decoration: none;
    color: var(--text);
  }

  h2 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    color: var(--accent);
  }

  p {
    margin: 0 0 1rem;
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag {
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.15rem 0.5rem;
    font-size: 0.75rem;
    color: var(--text-muted);
  }
</style>
